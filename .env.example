# Configuración de la aplicación
VITE_APP_NAME=EasyRif
VITE_APP_VERSION=1.0.0

# Configuración de Supabase
# Copia este archivo a .env y completa con tus credenciales reales
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co
VITE_SUPABASE_ANON_KEY=tu-clave-anonima-aqui

# URLs de servicios (para producción)
VITE_MERCADOPAGO_PUBLIC_KEY=tu_clave_publica_aqui
VITE_API_BASE_URL=https://tu-api.com

# Configuración de desarrollo
VITE_DEV_MODE=true
VITE_DEBUG=false

# Configuración de pagos (demo)
VITE_PAYMENT_DEMO_MODE=true

# Nota: Para desarrollo local sin Supabase configurado,
# el sistema usará credenciales de prueba:
# Usuario: demo_user
# Contraseña: demo_pass